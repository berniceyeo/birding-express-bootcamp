<!DOCTYPE html>
<html lang="en">
  <%- include('header', {title:'Notes'}); %>
  <body>
    <%- include('navbar'); %>
    <div class="container-fluid min-vh-100 h-auto">
      <%- include('headerimg', {image:'/note.jpg', text:'Create a Sighting'});
      %>
      <form action="/note" method="POST" class="needs-validation" novalidate>
        <br />
        <br />
        <div class="container p-3">
          <label for="species" class="row mb-3 text-capitalize">Species</label>
          <div class="row mb-3">
            <select name="species" class="form-select">
              <% species.forEach((category) => { %>
              <option value="<%= category.id %>"><%= category.name %></option>
              <% }); %>
            </select>
            <div class="invalid-feedback">Enter valid species</div>
          </div>

          <label for="habitat" class="row mb-3 text-capitalize">Habitat</label>
          <div class="row mb-3">
            <input
              type="text"
              class="form-control"
              id="habitat"
              name="habitat"
              required
            />
            <div class="invalid-feedback">Enter valid habitat</div>
          </div>

          <label for="date_time" class="row mb-3 text-capitalize"
            >Dete & Time</label
          >
          <div class="row mb-3">
            <input
              type="datetime-local"
              class="form-control"
              id="date_time"
              name="date_time"
              required
            />
            <div class="invalid-feedback">Enter valid date_time!</div>
          </div>

          <label for="app" class="row mb-3">Appearance</label>
          <div class="row mb-3">
            <input
              type="text"
              class="form-control"
              id="app"
              name="app"
              required
            />
            <div class="invalid-feedback">Enter valid appearance</div>
          </div>

          <label for="behaviour" class="row mb-3">Behaviour</label>
          <div class="row mb-3">
            <input
              type="text"
              class="form-control"
              id="behaviour"
              name="behaviour"
              required
            />
            <div class="invalid-feedback">Enter valid behaviour</div>
          </div>

          <label for="vocal" class="row mb-3">Vocalisations</label>
          <div class="row mb-3">
            <input
              type="text"
              class="form-control"
              id="vocal"
              name="vocal"
              required
            />
            <div class="invalid-feedback">Enter valid vocalisations</div>
          </div>

          <label for="flocksize" class="row mb-3">Flock Size</label>
          <div class="row mb-3">
            <input
              type="number"
              class="form-control"
              id="flocksize"
              name="flocksize"
              min="1"
              max="1000"
              required
            />
            <div class="invalid-feedback">Enter valid flocksize</div>
          </div>
          <div class="mt-5 mb-3 row justify-content-start">
            <div class="d-grid jusitfy-content-start col-sm-3">
              <button type="submit" class="btn btn-success">
                Submit
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <%- include('footer'); %>
  </body>
</html>
