<!DOCTYPE html>
<html lang="en">
  <%- include('header', {title:'Notes'}); %>
  <body>
    <%- include('navbar', {username:undefined}); %>
    <div class="container-fluid min-vh-100 h-auto">
      <%- include('headerimg', {image:'/user.jpg', text:'Be a Bird Watcher!'});
      %>
      <form action="/signup" method="POST" class="needs-validation" novalidate>
        <br />
        <br />
        <div class="container p-3">
          <div class="row mb-3">
            <label
              for="username"
              class="col-sm-2 text-capitalize col-form-label"
              >Username</label
            >
            <div class="col-sm-10">
              <input
                type="text"
                class="form-control"
                id="username"
                name="username"
                required
              />
              <div class="invalid-feedback">
                Enter a valid username
              </div>
            </div>
          </div>

          <div class="row mb-3">
            <label for="email" class="col-sm-2 text-capitalize col-form-label"
              >Email</label
            >
            <div class="col-sm-10">
              <input
                type="email"
                class="form-control <%=emailvalid %>"
                id="email"
                name="email"
                required
              />
              <div class="invalid-feedback">
                <%= emailfeedback %>
              </div>
            </div>
          </div>

          <div class="row mb-3">
            <label
              for="password"
              class="col-sm-2 text-capitalize col-form-label"
              >Password</label
            >
            <div class="col-sm-10">
              <input
                type="password"
                class="form-control <%=pwvalid %>"
                id="password"
                name="password"
                required
              />
              <div class="invalid-feedback">
                <%= pwfeedback %>
              </div>
            </div>
          </div>

          <div class="mb-3 row justify-content-start">
            <div class="d-grid jusitfy-content-start col-sm-3">
              <button type="submit" class="btn btn-success">
                Submit
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <%- include('footer'); %>
  </body>
</html>
