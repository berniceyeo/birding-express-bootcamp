<!DOCTYPE html>
<html lang="en">
  <%- include('header', {title:'Species'}); %>
  <body>
    <%- include('navbar'); %>
    <div class="container-fluid min-vh-100 h-auto">
      <%- include('headerimg', {image:'/species.jpg', text:'New Species'}); %>

      <form
        action="/species/<%= ejsdata.id %>?_method=PUT"
        method="POST"
        class="needs-validation"
        novalidate
      >
        <br />
        <br />
        <div class="container p-3">
          <label for="speciesname" class="row mb-3 text-capitalize"
            >Species Name</label
          >
          <div class="row mb-3">
            <input
              type="text"
              class="form-control"
              id="speciesname"
              name="speciesname"
              value="<%= ejsdata.name %>"
              required
            />
            <div class="invalid-feedback">Enter valid species</div>
          </div>

          <label for="scientificnm" class="row mb-3">Scientific Name</label>
          <div class="row mb-3">
            <input
              type="text"
              class="form-control"
              id="scientificnm"
              name="scientificnm"
              value="<%= ejsdata.scientific_name %>"
              required
            />
            <div class="invalid-feedback">Enter valid appearance</div>
          </div>

          <div class="mt-5 mb-3 row justify-content-start">
            <div class="d-grid jusitfy-content-start col-sm-3">
              <button type="submit" class="btn btn-success">
                Submit
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <%- include('footer'); %>
  </body>
</html>
